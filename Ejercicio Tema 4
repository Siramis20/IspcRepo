public class MyClass {
    public static void main(String args[]) {
      int numeroWhile = 0;
      
      while (numeroWhile < 3) {
        System.out.println(numeroWhile);
        numeroWhile = (numeroWhile + 1);
      }
    }
}

----------------------------------------------
public class MyClass {
    public static void main(String args[]) {
      int numeroWhile = 0;
      
      
      do {
          System.out.println(numeroWhile);
          numeroWhile = numeroWhile + 1;
      } while(numeroWhile == 0);

    }
}

