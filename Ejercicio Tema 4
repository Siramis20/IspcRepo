public class MyClass {
    public static void main(String args[]) {
    int numeroif = 0;
      
      if(numeroif > 0) {
          System.out.println("Es positivo");
      } else if(numeroif < 0) {
          System.out.println("Es negativo");
      } else {
          System.out.println("Es cero");
      }

    }  
}


